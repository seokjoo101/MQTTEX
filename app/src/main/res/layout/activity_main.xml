<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.seokjoo.mqttex.MainActivity">

    <EditText
        android:id="@+id/subtopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="subtopic" />

    <Button
        android:id="@+id/connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="connect" />

    <EditText
        android:id="@+id/topicTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="topicTo" />

    <EditText
        android:id="@+id/sendingmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="sendingmessage" />
    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="send" />

    <TextView
        android:id="@+id/receve_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
